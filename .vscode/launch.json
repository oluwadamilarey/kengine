  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/testbed.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/",
      "environment": [],
      "console": "newExternalWindow"
    },
    {
      "name": "(Linux) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/testbed",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/",
      "environment": []
    },
    {
      "name": "(macOS) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/testbed",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/",
      "environment": [
        {
          "name": "DYLD_LIBRARY_PATH",
          "value": "${workspaceFolder}/bin"
        }
      ],
      "MIMode": "lldb",
      "preLaunchTask": "build-macos"
    },
    {
      "name": "(macOS) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/bin/testbed",
      "MIMode": "lldb",
      "miDebuggerPath": "/usr/bin/lldb"
    }
  ]
}
